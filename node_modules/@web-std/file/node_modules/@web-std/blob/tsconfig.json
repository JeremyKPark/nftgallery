{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "strict": true,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "target": "ES2018",
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "rootDir": ".",
    "incremental": true,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@web-std/blob": [
        "./src/lib.js"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules"
  ],
  "include": [
    "src/**/*.js",
    "test/**/*.js"
  ],
  "compileOnSave": false
}
